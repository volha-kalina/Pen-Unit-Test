<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Suite-Pen" verbose="1" >
    <test name="Test Pen">
        <classes>
            <class name="org.lab.PenTest">
                <methods>
                    <include name="testEmptyStringReturnedIfInkLessZero"/>
                    <include name="testEmptyStringReturnedIfInkZero"/>
                    <include name="testWordReturnedIfWordSizeEqualInkContainer"/>
                    <include name="testWordReturnedIfWordSizeLessInkContainer"/>
                    <include name="testPartOfWordReturnedIfWordSizeMoreInkContainer"/>
                    <include name="testSizeLetterParamZero"/>
                    <include name="testWordParamEmptyString"/>
                    <include name="testGetColorMethod"/>
                    <include name="testWordParamNull"/>
                    <include name="testIsWorkMethodSeparatelyForFalse"/>
                    <include name="testIsWorkMethodSeparatelyForTrue"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>